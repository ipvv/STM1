<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vsahin.moneycim">


    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />



    <application
        android:name=".MoneycimApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/stmproject"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity android:name=".Splash.Splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.MainActivity" />
        <activity android:name=".View.OCR_Scan_Receipt.OcrCaptureActivity" />
        <activity
            android:name=".ChartList.chartlist"
            android:label="@string/title_activity_chartlist"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Alarm.AlarmActivity"
            android:label="@string/title_activity_chartlist"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".View.MainActivity"
            android:theme="@style/settingTheme">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vsahin.moneycim.View.MainActivity" />
        </activity>
        <receiver android:name=".AlarmReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>